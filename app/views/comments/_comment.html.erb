<h3 class="comment-btn2">→コメント一覧に戻る</h3>

<section class="title">
	<h1><%= lesson.lesson_name %>に対するコメントの新規投稿</h1>
</section>

<div id="error">
</div>

<section class="form__all">

<div>
<%= form_for comment, url: lesson_comments_path, remote: true do |f| %>

<div class="field">
    <%= f.label :star, "10点満点の評価", class: "form__label" %>
    <%= f.number_field :star, class: "form__field" %>
</div>

<div class="field">
    <%= f.label :professor, "教授の名前", class: "form__label" %>
    <%= f.text_field :professor, class: "form__field" %>
</div>


<div class="field">
    <%= f.label :attendance, "出席の重要度", class: "form__label" %>
    <br>
    <%= f.select :attendance,["毎回出席をとる", "抜き打ちで出席をとる", "全く出席はとらない"], :prompt => "選択してください" %>
</div>


<div class="field">
    <%= f.label :textbook, "教科書が必要か？", class: "form__label" %>
    <br>
    <%= f.select :textbook,["必要", "あった方が良いが無くても大丈夫", "必要ない"], :prompt => "選択してください" %>
</div>


<div class="field">
    <%= f.label :exam, "試験の回数", class: "form__label" %>
    <br>
    <%= f.select :exam,["期末試験のみ", "中間試験と期末試験", "レポートのみ"], :prompt => "選択してください" %>
</div>


<div class="field">
    <%= f.label :exam_image, "過去問画像", class: "form__label" %>
    <br>
    <%= f.attachment_field :exam_image %>
</div>


<div class="field">
    <%= f.label :comment, "自由記述欄", class: "form__label" %>
    <%= f.text_area :comment, placeholder: "授業の感想、詳細の内容を記入してください。", class: "form__field" %>
</div>
	<%= f.submit "コメントの投稿", class: "btn" %>

<% end %>
</div>

</section>