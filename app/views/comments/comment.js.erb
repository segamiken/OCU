
$(document).ready(function () {
	$('#favorite-link').html("<%= escape_javascript(render 'comments/like', comments: @comments, star_average: @star_average) %>");
	$('.comment-link').hide();
	$('.comment-index').show();

	$('.comment-btn').on('click', function(){
		$('.comment-index').hide();
		$('.comment-link').show();
	});
});