<div class="comment-index">

<section class="title", id="comments-index">
	<h1><%= @lesson.department.department_name %>
	<%= @lesson.lesson_name %></h1>
</section>


<div>
	<%= link_to "過去問一覧を見る", images_lesson_path(@lesson.id) %>
</div>

<div id="favorite-link">
	<%= render "like", comments: @comments, star_average: @star_average %>
</div>

</div>


<% if customer_signed_in? %>
<h3 class="comment-btn">→新規コメントを投稿する</h3>
<div class="comment-link">
	<%= render "comment", comment: @comment, lesson: @lesson %>
</div>
<% end %>
