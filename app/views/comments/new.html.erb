<ul>
  <% @comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>


<section class="title">
	<h1><%= @lesson.lesson_name %>に対するコメントの新規投稿</h1>
</section>


<div>
<%= form_for @comment, url: lesson_comments_path do |f| %>

<div class="field">
    <%= f.label :star, "10点満点の評価" %>
    <%= f.number_field :star %>
</div>

<div class="field">
    <%= f.label :professor, "教授の名前" %>
    <%= f.text_field :professor %>
</div>


<div class="field">
    <%= f.label :attendance, "出席の重要度" %>
    <%= f.select :attendance,["毎回出席をとる", "抜き打ちで出席をとる", "全く出席はとらない"], :prompt => "選択してください" %>
</div>


<div class="field">
    <%= f.label :textbook, "教科書が必要か？" %>
    <%= f.select :textbook,["必要", "あった方が良いが無くても大丈夫", "必要ない"], :prompt => "選択してください" %>
</div>


<div class="field">
    <%= f.label :exam, "試験の回数" %>
    <%= f.select :exam,["期末試験のみ", "中間試験と期末試験", "レポートのみ"], :prompt => "選択してください" %>
</div>

<div class="field">
    <%= f.label :comment, "自由記述欄" %>
    <%= f.text_area :comment, placeholder: "授業の感想、詳細の内容を記入してください。" %>
</div>
	<%= f.submit %>

<% end %>
</div>