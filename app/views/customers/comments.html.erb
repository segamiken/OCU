<section class="title">
	<h1><%= @customer.customer_name %>さんの投稿一覧</h1>
</section>

<% @comments.each do |f| %>
<div class="clearfix">
	<h3 class="mypage__lesson"><%= f.lesson.lesson_name %></h3>
	<div class="comment__title">
		<p>評価</p>
		<p>教授</p>
		<p>出席</p>
		<p>教科書</p>
		<p>試験</p>
		<p>感想</p>
		<p>投稿したユーザー</p>
	</div>

	<div class="comment__contents">
		<p class="comment__text">
		<%= f.star %>
		</p>

		<p class="comment__text">
		<%= f.professor %>
		</p>

		<p class="comment__text">
		<%= f.attendance %>
		</p>

		<p class="comment__text">
		<%= f.textbook %>
		</p>

		<p class="comment__text">
		<%= f.exam %>
		</p>

		<p class="comment__text">
		<%= f.comment %>
		</p>

		<p class="comment__text">
		<%= f.customer.customer_name %>
		</p>
	</div>
</div>
<br>
<br>
<% end %>