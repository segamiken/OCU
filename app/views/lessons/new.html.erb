<ul>
  <% @lesson.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<section class="title">
	<h1>授業とコメントの新規投稿</h1>
</section>


<section class="form__all">

<%= form_for @lesson, url: department_lessons_path do |f| %>
<h2>授業</h2>
	<div class="field">
		<%= f.label :lesson_name, "授業名", class: "form__label"%>
		<%= f.text_field :lesson_name, class: "form__field" %>
	</div><br>

<h2>コメント</h2>
	<div>
		<%= f.fields_for :comments do |comment| %>
			<%= render "comment_fields", f: comment %>
		<% end %>

		<%= f.submit "投稿", class: "btn" %>
	</div>

<% end %>

</section>